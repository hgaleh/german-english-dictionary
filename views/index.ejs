<!DOCTYPE html>
<html>

<head>
  <title>German To English Dictionary</title>
  <script src="js/index.js"></script>
  <link rel="stylesheet" href="style/style.css">
  <link href="https://fonts.googleapis.com/css?family=Montserrat:400&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css?family=Inter:200,300&display=swap" rel="stylesheet">
</head>

<body>
  <span id="notif">Copied!</span>
  <input id="txtSearch" type="text" value="<%= keyword %>" onkeypress="lib.search(this, event)">
  <% if (translation.base) { %>
    <h3>Base forms: </h3>
    <ul>
      <% translation.base.forEach(function(base) { %>
        <li>
          <a href="/?q=<%= base %>">
            <%= base %>
          </a>
        </li>
        <% }); %>
    </ul>
  <% } %>

  <% if (translation.subst) { %>
    <%- include('part', { name: 'Nouns' , data: mapDataEn(translation.subst), onclick: 'lib.onPartClick' }) %>
  <% } %>

  <% if (translation.verb) { %>
    <%- include('part', { name: 'Verbs' , data: mapDataEn(translation.verb), onclick: 'lib.onPartClick' }) %>
  <% } %>

  <% if (translation.adjadv) { %>
    <%- include('part', { name: 'Adjectives / Adverbs' , data: mapDataEn(translation.adjadv), onclick: 'lib.onPartClick' }) %>
  <% } %>

  <% if (translation.praep) { %>
    <%- include('part', { name: 'Prepositions / Pronouns' , data: mapDataEn(translation.praep), onclick: 'lib.onPartClick' }) %>
  <% } %>

  <% if (translation.definition) { %>
    <%- include('part', { name: 'Definitions' , data: mapDataEn(translation.definition), onclick: 'lib.onPartClick' }) %>
  <% } %>

  <% if (translation.phrase) { %>
    <%- include('part', { name: 'Phrases / Collocations' , data: mapDataDe(translation.phrase), onclick: 'lib.onPartClick' }) %>
  <% } %>

  <% if (translation.example) { %>
    <%- include('part', { name: 'Examples' , data: mapDataDe(translation.example), onclick: 'lib.onExampleClick' }) %>
  <% } %>
</body>

</html>
